<Page x:Class="KT5Iarovkov.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KT5Iarovkov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ИС по прокату спортивного инвентаря" Icon="Resources/logo.ico"
>

    <Grid>
        <StackPanel Margin="0,140,0,0">
            <Label Content="Логин: " HorizontalAlignment="Center" 
                   FontFamily="Comic Sans MS"></Label>
            <TextBox Height="20" Width="100" x:Name="LoginTextBox"></TextBox>
            <Label Content="Пароль: " HorizontalAlignment="Center" 
                   FontFamily="Comic Sans MS"></Label>
            <PasswordBox Height="20" Width="100" x:Name="PasswordBox"></PasswordBox>
            <Button Content="Войти" Background="#FF498C51"
            Margin="0,10,0,0" Height="20" Width="100"
                    Click="LoginButton_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
